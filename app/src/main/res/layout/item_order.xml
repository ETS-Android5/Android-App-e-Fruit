<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewSingleItem_Order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="6dp"
    android:background="@drawable/shape_card_view_recycler_items"
    android:clickable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_OrderItem_DateValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/helvetica"
            android:text=""
            android:textColor="@color/colorText"
            android:textSize="12sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView_OrderItem_ShopNameValue"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView_OrderItem_DateHeader"
            app:layout_constraintTop_toBottomOf="@+id/textView_OrderItem_DateHeader"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView_OrderItem_ShopNameValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/helvetica"
            android:text=""
            android:textColor="@color/colorText"
            android:textSize="12sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView_OrderItem_ProductsValue"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView_OrderItem_ShopNameHeader"
            app:layout_constraintTop_toBottomOf="@+id/textView_OrderItem_ShopNameHeader"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView_OrderItem_DateHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/helvetica_bold"
            android:text="@string/recycler_item_order_date_header"
            android:textColor="@color/colorText"
            android:textSize="12sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_OrderItem_ShopNameHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/helvetica_bold"
            android:text="@string/recycler_item_order_shop_name_header"
            android:textColor="@color/colorText"
            android:textSize="12sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@+id/textView_OrderItem_ProductsHeader"
            app:layout_constraintStart_toEndOf="@+id/textView_OrderItem_DateHeader"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_OrderItem_ProductsHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="45dp"
            android:fontFamily="@font/helvetica_bold"
            android:text="@string/recycler_item_order_products_header"
            android:textColor="@color/colorText"
            android:textSize="12sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@+id/textView_OrderItem_StatusHeader"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_OrderItem_StatusHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="50dp"
            android:fontFamily="@font/helvetica_bold"
            android:text="@string/recycler_item_order_status_header"
            android:textColor="@color/colorText"
            android:textSize="12sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_OrderItem_ProductsValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/helvetica"
            android:text=""
            android:textColor="@color/colorText"
            android:textSize="12sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView_OrderItem_StatusValue"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView_OrderItem_ProductsHeader"
            app:layout_constraintTop_toBottomOf="@+id/textView_OrderItem_ProductsHeader"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView_OrderItem_StatusValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/helvetica"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView_OrderItem_StatusHeader"
            app:layout_constraintTop_toBottomOf="@+id/textView_OrderItem_StatusHeader"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>